<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sumeet.test.makeYellowStack"
    android:id="@+id/activity_make_yellow_stack"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.49"
        android:weightSum="1"
        android:id="@+id/yellow_totes"
        android:focusableInTouchMode="false">

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton25"
            android:layout_weight="0.16"
            android:background="@drawable/yellowtote"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton24"
            android:layout_weight="0.16"
            android:background="@drawable/yellowtote"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton23"
            android:layout_weight="0.16"
            android:background="@drawable/yellowtote"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton22"
            android:layout_weight="0.16"
            android:background="@drawable/yellowtote"
            android:onClick="changeTote" />

    </LinearLayout>

    <ImageButton
        android:layout_width="98dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButton28"
        android:background="@drawable/checkmark"
        android:onClick="confirmTotes"
        android:layout_gravity="bottom" />
</LinearLayout>
