<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sumeet.test.makeStack"
    android:id="@+id/activity_make_stack"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="1"
        android:id="@+id/linear_layout_numbers">

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/textView9"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/textView8"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/textView6"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/textView7"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/textView5"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/textView4"
            android:layout_weight=".14"
            android:textSize="48dp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/linear_layout_totes"
        android:weightSum="1">

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton7"
            android:background="@drawable/tote"
            android:layout_weight="0.16"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton6"
            android:background="@drawable/tote"
            android:layout_weight="0.16"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton5"
            android:background="@drawable/tote"
            android:layout_weight=".16"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton4"
            android:background="@drawable/tote"
            android:layout_weight=".16"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton3"
            android:background="@drawable/tote"
            android:layout_weight=".16"
            android:onClick="changeTote" />

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageButton2"
            android:background="@drawable/tote"
            android:onClick="changeTote"
            android:layout_weight=".16" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageButton16"
            android:background="@drawable/checkmark"
            android:onClick="confirmTotes" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="1"
        android:id="@+id/linear_layout_bins">

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="83dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton13"
            android:background="#303030"
            android:layout_weight="0.22"
            android:onClick="changeBin" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton12"
            android:background="#303030"
            android:onClick="changeBin" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton11"
            android:background="#303030"
            android:onClick="changeBin" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton10"
            android:background="#303030"
            android:onClick="changeBin" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton9"
            android:background="#303030"
            android:onClick="changeBin" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:id="@+id/imageButton8"
            android:background="#303030"
            android:onClick="changeBin" />
    </LinearLayout>

</LinearLayout>
